<% include ../partials/header %>

<div class="container my-4">
  <h1 class="text-center">Edit comment</h1>
  <div class="col-xs-12 col-md-6 col-lg-4 mx-auto my-4">
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label>Comment content</label>
          <textarea class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>