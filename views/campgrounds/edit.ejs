<% include ../partials/header %>

<div class="container my-4">
  <h1 class="text-center">Edit <%= campground.name %></h1>
  <div class="col-xs-12 col-md-8 col-lg-6 mx-auto my-4">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <textarea class="form-control" type="text" name="campground[description]" rows="10"><%= campground.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </div>
    </form>
    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
      <div class="form-group mt-5">
        <button class="btn btn-danger btn-lg btn-block">Delete!</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>